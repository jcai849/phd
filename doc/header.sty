% Glossary
\usepackage{glossaries}
\makeglossaries

\newglossaryentry{chunk}
{
	name={Chunk},
	description={A distinct component piece of a larger object, possibly
	located at a separate node to other chunks belonging to the object}
}

\newglossaryentry{chunkid}
{
	name={Chunk ID},
	description={A unique reference for some particular chunk, serving as
	the name of the chunk's associated queue}
}

\newglossaryentry{chunkref}
{
	name={Chunk Reference},
	description={A reference to a chunk, the chunk possibly existing on a
	separate node}
}

\newglossaryentry{clusttable}
{
	name={Cluster Table},
	description={A central table storing mappings between nodes, chunks,
	distributed object references, with lower level details such as handles
	on connections to the nodes, along with additional metadata}
}

\newglossaryentry{connection}
{
	name={Connection},
	description={A communication channel from one computer to another as
	part of a network}
}

\newglossaryentry{distobj}
{
	name={Distributed Object},
	description={An object that is composed of a totally
	ordered set of chunks dispersed across separate nodes}
}

\newglossaryentry{distsys}
{
	name={Distributed System},
	description={A system whose constituent parts are located on different
	computers which are networked together}
}

\newglossaryentry{host}
{
	name={Host},
	description={A singular machine in a network, which may hold multiple
	communication nodes}
}

\newglossaryentry{id}
{
	name={ID},
	description={A unique integer used in the distobj system to uniquely
	identify nodes, chunks, and distributed object references within the
	system}
}

\newglossaryentry{initiator}
{
	name={Initiator},
	description={The node that initialises and serves to boot the
	distributed system}
}

\newglossaryentry{jobid}
{
	name={Job ID},
	description={A unique reference for a particular request, serving as
	the name of a queue for any response}
}

\newglossaryentry{logicaltime}
{
	name={Logical Time},
	description={A partial ordering of events in time based on the
	knowledge of which events necessarily happen before others}
}

\newglossaryentry{master}
{
	name={Master},
	description={The controlling process over other running processes. In a
	distributed system, typically the initiator process}
}

\newglossaryentry{node}
{
	name={Node},
	description={A member of a distributed system in a computational
	capacity}
}

\newglossaryentry{object}
{
	name={Object},
	description={A particular instance of a class}
}

\newglossaryentry{objref}
{
	name={Object Reference},
	description={A reference to all of the chunks of a distributed object,
	symbolising the object and encapsulating the necessary information with
	which to access the distributed object}
}

\newglossaryentry{requester}
{
	name={Requester},
	description={A node that sends a message requesting some action of
	another node.Not a fixed role, and can change based on a state
	description}
}

\newglossaryentry{responder}
{
	name={Responder},
	description={A node that responds to a message from some responder
	node. Not a fixed role, and can change based on a state description}
}

\newglossaryentry{rprocess}
{
	name={R Process},
	description={A live process running an implementation of the
	programming language R. In comparison with \textbf{R Session}, a
	greater emphasis is placed on the process from the perspective of the
	operating system}
}

\newglossaryentry{rsession}
{
	name={R Session},
	description={An interactive run with an R process. In comparison with
	\textbf{R Process}, a greater emphasis is placed on the session from
	the user perspective}
}

\newglossaryentry{worker}
{
	name={Worker},
	description={A process under direction of the master
	process}
}

\newglossaryentry{distobjsys}
{
	name={\texttt{distObj} System},
	description={The platform being developed herein to enable large scale
	statistical modelling through the creation of a distributed system in
	R}
}

